<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sixcity.mapper.TransferMapper">

    <sql id="selectColumns">
        SELECT
            a.Id,
            a.UserId,
            a.TransUrl,
            a.RebatePoint,
            a.CreateTime,
            a.UpdateTime
        FROM Transfer_t a
    </sql>

    <!-- 插入银行信息 -->
    <insert id="insert" parameterType="Transfer" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Transfer_t (
            UserId,
            TransUrl,
            RebatePoint,
            CreateTime,
            UpdateTime
        ) VALUES (
            #{userId},
            #{transUrl},
            #{rebatePoint},
            #{createTime},
            #{updateTime}
        )
    </insert>

    <!-- 查找追踪商品 -->
    <select id="findById" resultType="org.sixcity.domain.Transfer">
        <include refid="selectColumns"/>
        WHERE Id = #{transId}
    </select>

</mapper>
